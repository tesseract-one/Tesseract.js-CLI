{
  "$async": true,
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "runPodInstall": {
      "type": "boolean"
    },
    "outputDir": {
      "type:": "string",
      "minLength": 1
    },
    "template": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "minLength": 2
        },
        "resources": {
          "type": "object",
          "properties": {
            "appIcon": {
              "type": "string",
              "minLength": 5
            },
            "splashImage": {
              "type": "string",
              "minLength": 5
            }
          },
          "additionalProperties": true
        },
        "iosBundleId": {
          "type": "string"
        }
      },
      "required": ["path"],
      "additionalProperties": false
    },
    "appConfig": {
      "type": "object",
      "properties": {
        "dappUrls": {
          "type": "object",
          "properties": {
            "default": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri"
                  },
                  "name": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": ["name", "url"],
                "additionalProperties": false
              },
              "additionalItems": false
            },
            "testing": {
              "type": "array"
            }
          },
          "required": ["default", "testing"],
          "additionalProperties": false
        },
        "rpcUrls": {
          "type": "object",
          "patternProperties": {
            ".*?": {
              "type": "string",
              "format": "uri"
            }
          },
          "minProperties": 1,
          "uniqueProperties" : true  
        },
        "extra": {
          "type": "object"
        }
      },
      "required": ["dappUrls", "rpcUrls", "extra"],
      "additionalProperties": true
    }
  },
  "required": ["name", "runPodInstall", "outputDir", "template", "appConfig"],
  "additionalProperties": false
}